{
  "name": "Node.js",
  "image": "node:14",
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "extensions": [
    "dbaeumer.vscode-eslint",
    "esbenp.prettier-vscode"
  ],
  "postCreateCommand": "npm install",
  "forwardPorts": [3000],
  "portsAttributes": {
    "3000": {
      "label": "Web Application",
      "onAutoForward": "openPreview"
    }
  },
  "remoteUser": "root"
}
